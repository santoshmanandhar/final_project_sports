<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <!-- Title -->
    <TextView
        android:id="@+id/textTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add New Sport"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:gravity="left"
        android:padding="16dp"/>

    <Spinner
        android:id="@+id/spinner"
        android:layout_marginLeft="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Sports name CardView -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_view_border"
        android:elevation="0dp"
        app:cardUseCompatPadding="true"
        android:layout_margin="16dp">

        <EditText
            android:id="@+id/editTextSportName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Sports Name"
            android:background="@android:color/transparent"
            android:padding="8dp"/>
    </androidx.cardview.widget.CardView>

    <!-- Instructions CardView -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_view_border"
        android:layout_margin="16dp">

        <EditText
            android:id="@+id/editTextInstructions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Instructions"
            android:padding="8dp"
            android:gravity="start|center"
            android:background="@android:color/transparent"
            android:lines="5"
            android:minLines="3"
            android:scrollbars="vertical"/>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="right"
        android:gravity="right"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/sports_btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:textSize="18dp"
            android:text="Cancel"/>

        <TextView
            android:id="@+id/sports_btn_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:layout_marginRight="20dp"
            android:text="Add"/>

    </LinearLayout>

</LinearLayout>
